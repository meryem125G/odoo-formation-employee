<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================= LISTE ================= -->
        <record id="view_formation_module_list" model="ir.ui.view">
            <field name="name">formation.module.list</field>
            <field name="model">formation.module</field>
            <field name="arch" type="xml">
                <list string="Modules de formation" default_order="name asc"
      decoration-danger="not actif">
    <field name="name"/>
    <field name="theme_id"/>
    <field name="duree"/>
    <field name="niveau"/>
    <field name="methode_pedagogique"/>
    <field name="cout_par_heure"/>
    <field name="cout_total"/>

    <field name="actif" widget="boolean_toggle"/>
</list>
            </field>
        </record>

        <!-- ================= FORMULAIRE ================= -->
        <record id="view_formation_module_form" model="ir.ui.view">
            <field name="name">formation.module.form</field>
            <field name="model">formation.module</field>
            <field name="arch" type="xml">
                <form string="Module de formation">
                    <header>
    <field name="actif" widget="boolean_toggle"/>
</header>

                    <sheet>
                       <div class="oe_title">
    <div>
        <label for="name"/>
        <field name="name" nolabel="1"/>
    </div>
    <div>
        <label for="code_module"/>
        <field name="code_module" nolabel="1"/>
    </div>
</div>

                        <group>
                            <field name="theme_id"/>
                            <field name="niveau"/>
                            <field name="duree"/>

                            <field name="cout_par_heure"/>
                            <field name="cout_total"/>

                            <field name="methode_pedagogique"/>
                            <field name="capacite_max"/>
                        </group>

                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                </group>
                            </page>

                            <page string="Fournisseurs">
                                <field name="fournisseur_ids" widget="many2many_tags"/>
                            </page>

                           <page string="Formateurs">
    <field name="formateur_ids" widget="many2many">
        <list editable="bottom">
            <field name="name"/>
            <field name="type_formateur"/>
            <field name="domaine"/>
            <field name="contact_email"/>
        </list>
        <form>
            <group>
                <field name="name"/>
                <field name="type_formateur"/>
                <field name="domaine"/>
                <field name="contact_email"/>
                <field name="contact_phone"/>
            </group>
        </form>
    </field>
</page>




                            <page string="Suivi et KPI">
                                <group>
                                    <field name="nb_participants" readonly="1"/>
                                    <field name="date_creation" readonly="1"/>
                                    <field name="date_modification" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ================= KANBAN ================= -->
        <record id="view_formation_module_kanban" model="ir.ui.view">
            <field name="name">formation.module.kanban</field>
            <field name="model">formation.module</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong><field name="name"/></strong>
                                    <div><b>Thème :</b> <field name="theme_id"/></div>
                                    <div><b>Durée :</b> <field name="duree"/> h</div>
                                    <div><b>Niveau :</b> <field name="niveau"/></div>
                                    <div><b>Méthode :</b> <field name="methode_pedagogique"/></div>
                                    <div><b>Fournisseurs :</b> <field name="fournisseur_ids"/></div>
                                    <div><b>Formateurs :</b> <field name="formateur_ids"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================= ACTION ================= -->
        <record id="formation_module_action" model="ir.actions.act_window">
            <field name="name">Modules de formation</field>
            <field name="res_model">formation.module</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucun module enregistré. Cliquez sur <b>"Créer"</b> pour ajouter un module de formation.
                </p>
            </field>
        </record>

    </data>
</odoo>

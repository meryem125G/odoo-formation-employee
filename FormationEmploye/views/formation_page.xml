<odoo>
    <template id="formation_page" name="Page Formation Employé" website="True">
        <t t-call="website.layout">
            <div class="container" style="max-width:1200px;margin:auto;padding:50px 20px;font-family: 'Inter', sans-serif;">
                <header style="background: linear-gradient(135deg, #4a90e2, #0052cc); color: white; text-align:center; padding:80px 20px;">
                    <h1 style="font-size:3em;font-weight:700;">Formation Employé</h1>
                    <p style="font-size:1.3em;opacity:0.9;">Gestion complète et intelligente des formations dans votre entreprise</p>
                </header>

                <section class="features" style="display:grid;grid-template-columns:repeat(auto-fit,minmax(280px,1fr));gap:40px;margin-top:40px;">
                    <div class="feature-card" style="background:white;border-radius:20px;overflow:hidden;box-shadow:0 10px 25px rgba(0,0,0,0.08);text-align:center;padding:0;">
                        <img src="/FormationEmploye/static/description/cover.png" style="width:100%;height:200px;object-fit:cover;">
                        <div class="card-content" style="padding:25px;">
                            <h3 style="color:#0052cc;font-weight:600;margin-bottom:12px;">Planification des sessions</h3>
                            <p>Créez et gérez facilement vos sessions de formation avec un suivi en temps réel des participants.</p>
                        </div>
                    </div>

                    <!-- Répète les autres cartes de la même manière -->
                </section>

                <footer style="background:#1c1c1c;color:#ccc;text-align:center;padding:30px 10px;margin-top:50px;">
                    &copy; 2025 Meravox | www.meravox.com
                </footer>
            </div>
        </t>
    </template>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================= LISTE ================= -->
        <record id="view_formation_departement_list" model="ir.ui.view">
            <field name="name">formation.departement.list</field>
            <field name="model">formation.departement</field>
            <field name="arch" type="xml">
                <list string="Départements de formation" default_order="name asc">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="responsable_id"/>
                    <field name="capacite_max"/>
                    <field name="nb_formations"/>
                    <field name="nb_modules"/>
                    <field name="nb_employes"/>
<field name="actif" widget="boolean_toggle"/>                </list>
            </field>
        </record>

        <!-- ================= FORMULAIRE ================= -->
        <record id="view_formation_departement_form" model="ir.ui.view">
            <field name="name">formation.departement.form</field>
            <field name="model">formation.departement</field>
            <field name="arch" type="xml">
                <form string="Département de formation">
                    <header>
                    <field name="actif" widget="boolean_toggle"/>                    
                    </header>
                    <sheet>
                      <div class="oe_title">
    <div>
        <label for="name"/>
        <field name="name" nolabel="1"/>
    </div>
    <div>
        <label for="code"/>
        <field name="code" nolabel="1"/>
    </div>
</div>


                        <group>
                            <field name="responsable_id"/>
                            <field name="parent_id"/>
                            <field name="capacite_max"/>
                        </group>

                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                </group>
                            </page>

                            <page string="Relations">
                                <group>
                                    <field name="formation_ids">
                                        <list editable="bottom">
                                            <field name="name"/>
                                             <field name="date_debut"/>       
                                        </list>
                                    </field>
                                </group>
                                <group>
                                    <field name="module_ids" widget="many2many_tags"/>
                                    <field name="employe_ids" widget="many2many_tags"/>
                                </group>
                            </page>

                            <page string="Suivi et KPI">
                                <group>
                                    <field name="nb_formations" readonly="1"/>
                                    <field name="nb_modules" readonly="1"/>
                                    <field name="nb_employes" readonly="1"/>
                                    <field name="date_creation" readonly="1"/>
                                    <field name="date_modification" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ================= KANBAN ================= -->
        <record id="view_formation_departement_kanban" model="ir.ui.view">
            <field name="name">formation.departement.kanban</field>
            <field name="model">formation.departement</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong><field name="name"/></strong>
                                    <div><b>Code :</b> <field name="code"/></div>
                                    <div><b>Responsable :</b> <field name="responsable_id"/></div>
                                    <div><b>Capacité max :</b> <field name="capacite_max"/></div>
                                    <div><b>Formations :</b> <field name="nb_formations"/></div>
                                    <div><b>Modules :</b> <field name="nb_modules"/></div>
                                    <div><b>Employés :</b> <field name="nb_employes"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================= ACTION ================= -->
        <record id="formation_departement_action" model="ir.actions.act_window">
            <field name="name">Départements de formation</field>
            <field name="res_model">formation.departement</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucun département enregistré. Cliquez sur <b>"Créer"</b> pour ajouter un département de formation.
                </p>
            </field>
        </record>

    </data>
</odoo>
